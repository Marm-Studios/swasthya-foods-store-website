{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

{% comment %} <ul class="list-unstyled list-social{% if class %} {{ class}}{% endif %}" role="list"> {% endcomment %}
<ul class="social-icons-wrapper_ct" role="list">
  {%- if settings.social_facebook_link != blank -%}
    {% comment %}  {% endcomment %}
    <li>
      <a href="{{ settings.social_facebook_link }}">
        <span class="svg-wrapper social-icon_ct">
          {{- 'icon-facebook.svg' | inline_asset_content -}}
        </span>
        <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
